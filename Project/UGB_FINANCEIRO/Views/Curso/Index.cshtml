@model IEnumerable<UGB_FINANCEIRO.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<div class="crud">
    <div class="titulo">
        MÓDULO DE CURSOS
    </div>
    <div class="content">
        <div class="btn-cadastrar">
            @Html.ActionLink("Cadastrar Curso", "Create", null,
                            new { @class = "btn btn-primary" })
        </div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo.Tipo1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCurso)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo.Tipo1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCurso)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", null, new { id = item.idCurso }, new { @class = "btn-acao" })
                        @Html.ActionLink("Deletar", "Delete", null, new { id = item.idCurso }, new { @class = "btn-acao" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
